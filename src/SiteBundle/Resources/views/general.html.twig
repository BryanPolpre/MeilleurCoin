<html>
    <head>
        <title>{% block title %}EniBlog{% endblock %}</title>
        <link href="{{ asset('css/general.css') }}" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <div class="header">
            {% block header %}
            <p class="logo"><a href="{{ path('index') }}"><img src="{{ asset('img/logo_eni.gif') }}" alt="logo" /></a></p>
            <h1>EniBlog</h1>
            <div class="clear"></div>
            <ul class="menu">
                <li><a href="{{ path('index') }}">Accueil</a></li>
                <li><a href="{{ path('about') }}">A propos</a></li>
                <li><a href="{{ path('user') }}">Utilisateurs</a></li>
            </ul>
            <div class="clear"></div>
            <hr />
            {% endblock %}
        </div>
        <div class="body">
            {% block body %}{% endblock %}
        </div>
        <div class="footer">
            {% block footer %}© 2018 Eni-Ecole - Tous droits réservés{% endblock %}
        </div>
    </body>
</html>
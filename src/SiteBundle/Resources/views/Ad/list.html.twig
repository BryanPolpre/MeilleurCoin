{% extends '@Site/general.html.twig' %}

{% block title %}
    {{ parent() }} - Liste des annonces
{% endblock %}

{% block body %}
    <div class="ads">
    {% for ad in ads %}
        <div class="ad" id="{{ ad.id }}">
            <a href="{#{{ path('view', {'id' : post.id}) }}#}">
            <h3>{{ ad.title|upper }} - <span class="ville">{{ ad.city|capitalize }}</span></h3>
            </a>
        </div>
    {% endfor %}
    </div>
{% endblock %}
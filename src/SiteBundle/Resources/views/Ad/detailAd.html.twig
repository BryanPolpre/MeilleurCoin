{% extends '@Site/general.html.twig' %}

{% block title %}
    {{ parent() }} - Détail de l'annonce {{ ad.title }}
{% endblock %}

{% block body %}
    <h3>Détail de l'annonce : </h3>
    <h2>{{ ad.title }} </h2>
    Description : {{ ad.description }}<br>
    Ville : {{ ad.city }} {{ ad.zip }}<br>
    Prix : {{ ad.price }} € <br>
    Date de création : {{ ad.dateCreated | date('d/m/Y')}}<br>
    {% if ad.category != null %}
        Catégorie : {{ ad.category.libelle }}
    {% endif %}
    {% for pic in ad.pictures %}
        <p><img src="{{ asset('uploads/' ~ ad.pictures[loop.index0].file) }}" alt="Photo_Annonce"></p>
    {% endfor %}
{% endblock %}